{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electronmon",
      "windows": {
        "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electronmon.cmd"
      },
      "trace": true,
      "sourceMaps": true,
      "restart": true,
      "env": {
        "ELECTRON_ENABLE_LOGGING": "true",
      },
      "outFiles": ["${workspaceRoot}/dist/*.js"],
      "args": [ "${workspaceRoot}",
                "--remote-debugging-port=9223",
                "--enable-logging",
                "--open-config-on-start"],
      "console": "integratedTerminal",
      "outputCapture": "std",
      "preLaunchTask": "watch:backend",
      "autoAttachChildProcesses": true
    },
    {
      "name": "Electron: Renderer",
      "type": "pwa-chrome",
      "request": "attach",
      "trace": true,
      "restart": true,
      "port": 9223,
      "timeout": 5000,
      "webRoot": "${workspaceRoot}/src",
      "sourceMaps": true,
      "preLaunchTask": "watch:frontend",
      "outputCapture": "std"
    }
  ],
  "compounds": [
    {
      "name": "Electron: All",
      "configurations": ["Electron: Main", "Electron: Renderer"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "debug",
        "order": 1
      }
    }
  ],
}