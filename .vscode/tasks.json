{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch:backend",
            "type": "npm",
            "script": "watch:backend",
            "isBackground": true,
            "group": "build",
            "problemMatcher": {
                "owner": "typescript",
                "fileLocation": "relative",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "webpack is watching the files",
                    "endsPattern": "Time: (\\d+)ms"
                },
                "pattern": [
                    {
                        "regexp": "ERROR in ([^\\(]*)\\((\\d+),(\\d+)\\):",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    },
                    {
                        "regexp": "([A-Za-z0-9-]+):(.*)",
                        "message": 2,
                        "code": 1
                    }
                ]
            }
        },
        {
            "label": "watch:frontend",
            "type": "npm",
            "script": "watch:frontend",
            "isBackground": true,
            "group": "build",
            "problemMatcher": {
                "owner": "typescript",
                "fileLocation": "relative",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "webpack is watching the files",
                    "endsPattern": "Time: (\\d+)ms"
                },
                "pattern": [
                    {
                        "regexp": "ERROR in ([^\\(]*)\\((\\d+),(\\d+)\\):",
                        "file": 1,
                        "line": 2,
                        "column": 3
                    },
                    {
                        "regexp": "([A-Za-z0-9-]+):(.*)",
                        "message": 2,
                        "code": 1
                    }
                ]
            }
        },
        {
            "label": "relaunch renderer debug",
            "command": "${command:launch-config.launchConfig}",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "new",
                "showReuseMessage": false,
                "clear": false,
                "group": "2"
            }
        },
    ]
}